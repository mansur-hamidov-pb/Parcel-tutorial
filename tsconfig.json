{
  "compilerOptions": {
      "baseUrl": "./src",
      "lib": [
          "dom",
          "es2015",
          "es2015.promise"
      ],
      "experimentalDecorators": true,
      "sourceMap": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "module": "esnext",
      "moduleResolution": "node",
      "target": "es5",
      "jsx": "react"
  },
  "exclude": [
      "node_modules",
      "tools"
  ]
}
